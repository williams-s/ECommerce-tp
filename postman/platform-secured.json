{
  "info": {
    "name": "Ecommerce Platform - Secured",
    "_postman_id": "c3fbcf89-1234-4567-89ab-abcdef123456",
    "description": "JWT secured platform tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "jwt",
      "value": "",
      "type": "string"
    },
    {
      "key": "expired_jwt",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1 - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/api/v1/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "v1", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"jean.dupont@esipen.com\",\n  \"password\": \"password\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set(\"jwt\", json.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "1b - Generate Expired Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:8081/api/v1/auth/generate-expired-token",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8081",
          "path": ["api", "v1", "auth", "generate-expired-token"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"jean.dupont@esipen.com\",\n  \"password\": \"password\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set(\"expired_jwt\", json.token);"
            ]
          }
        }
      ]
    },
    {
      "name": "2 - Get Products (with token)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "http://localhost:8082/api/v1/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "v1", "products"]
        }
      }
    },
    {
      "name": "3 - Get Products (no token)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:8082/api/v1/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8082",
          "path": ["api", "v1", "products"]
        }
      }
    },
    {
      "name": "4 - Create Order (expired token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{expired_jwt}}"
          },
          {
