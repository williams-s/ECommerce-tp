        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"PENDING\",\n  \"shippingAddress\": \"123 Main Street\",\n  \"orderItems\":[{\"productId\": 1, \"quantity\": 2}]\n}"
        }
